#!/bin/env python2.7

"""
Plots the data generated by the experiment.
"""
from __future__ import print_function
from __future__ import unicode_literals
from __future__ import absolute_import
from __future__ import division

# Set import path
from os import path
import sys
sys.path.append(path.dirname(path.realpath(path.join(__file__, '../..'))))


# Imports
import numpy as np
import tools.plotter as plotter


def read_values(f):
    budget = []
    slice_tree = []
    fourier = []
    with f as error_file:
        for line in error_file:
            i, s, f = [float (a) for a in line.strip().split(',')]
            budget.append(int(i))
            slice_tree.append(s)
            fourier.append(f)
    return budget, slice_tree, fourier

if __name__ == "__main__":
    budget, slice_tree, fourier = read_values(sys.stdin)

    plotter.scatter_plot(
        [
            [budget, slice_tree],
            [budget, fourier]
        ],
        "# of Nodes", "Time (s)", ["Slice Tree", "Fourier"],
        "Scalability", f="plot.png"
        )
